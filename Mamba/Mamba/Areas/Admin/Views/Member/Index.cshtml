@using Mamba.Models
@model List<Member>
@{
    int count = 0;
}
<h1>Members
    <a class="btn btn-primary" asp-action="create">Create</a></h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">sira nomresi</th>
            <th scope="col">Ad</th>
            <th scope="col">Peshe</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Fulllname</td>
                <td>@item.Proffesion</td>
                <td><img src="~/Uploads/@item.ImgUrl" width="150px" height="150px"/></td>
                <td><a class="btn btn-warning" asp-action="Update" asp-controller="member" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="member" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
